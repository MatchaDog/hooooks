{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "target": "ES2019",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "strict": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/hooks/*/index.ts", "src/hooks/index.ts"],
    "exclude": ["node_modules", "lib", "es", "build"]
}
